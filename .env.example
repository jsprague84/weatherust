# Copy to .env and fill in secrets (do NOT commit .env)

# OpenWeatherMap API key
OWM_API_KEY=your_owm_api_key_here

# Gotify application key and URL
GOTIFY_KEY=your_gotify_app_key_here
GOTIFY_URL=https://gotify.example.com/message

# Optional: instead of GOTIFY_KEY, point to a file containing only the key
# Useful with Docker secrets (mount file and set GOTIFY_KEY_FILE path)
# GOTIFY_KEY_FILE=/run/secrets/gotify_key

# Optional default units (imperial|metric)
# If not set via CLI, the app uses DEFAULT_UNITS or falls back to "imperial".
DEFAULT_UNITS=imperial

# Optional defaults for location
# Provide EITHER DEFAULT_ZIP (preferred) OR DEFAULT_LOCATION
# DEFAULT_ZIP takes precedence when both are set.
# Examples:
# DEFAULT_ZIP=52726
# DEFAULT_LOCATION=Davenport,IA,US


# Timezone for Ofeliaâ€™s cron parsing
TZ=America/Chicago


# Absolute host path to this repo's .env file
# Used by Ofelia to mount into the job container at /app/.env
# Example: /opt/weatherust/.env
ENV_FILE_HOST_PATH=/absolute/path/to/your/weatherust/.env



# --- Speedtest notifier (speedynotify) options ---
# Minimum acceptable speeds in Mbps (used for warnings)
SPEEDTEST_MIN_DOWN=300
SPEEDTEST_MIN_UP=20
# Optional: pin to a specific Ookla server id
# SPEEDTEST_SERVER_ID=

# Optional: separate Gotify app token for speedynotify
# If unset, set this equal to your GOTIFY_KEY to reuse the same app
# SPEEDY_GOTIFY_KEY=your_speedtest_gotify_app_key


# --- Image tag overrides for pre-merge testing ---
# Set these to pull branch/PR/SHA images built by GitHub Actions:
# Examples:
#   WEATHERUST_TAG=feature-feature-scaffold
#   WEATHERUST_TAG=pr-12
#   WEATHERUST_TAG=sha-abcdef1
#   SPEEDYNOTIFY_TAG=feature-feature-scaffold
#   SPEEDYNOTIFY_TAG=pr-12
#   SPEEDYNOTIFY_TAG=sha-abcdef1
# Leave unset to use :latest
# WEATHERUST_TAG=
# SPEEDYNOTIFY_TAG=


# --- Docker monitor (dockermon) ---
# Notify even when everything is OK (default false)
HEALTH_NOTIFY_ALWAYS=false
# CPU and memory warning thresholds in percent
CPU_WARN_PCT=85
MEM_WARN_PCT=90
# Image tag override for testing (see README for tag conventions)
# DOCKERMON_TAG=

# Optional: separate Gotify app token for dockermon
# Precedence in code: DOCKERMON_GOTIFY_KEY -> GOTIFY_KEY -> GOTIFY_KEY_FILE
# DOCKERMON_GOTIFY_KEY=your_dockermon_gotify_app_key
